{% extends '::base.html.twig' %}

{% block body -%}
    <h1>locos list</h1>

    <table class="records_list table table-condensed">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>Operational Status</th>
                <th>Admin Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.locoNo }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.operationalStatus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('locos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('locos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('locos_new') }}">
                Add a Loco
            </a>
        </li>
    </ul>
    {% endblock %}

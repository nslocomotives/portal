{% extends '::newsletterbase.html.twig' %}

{% set active_sub_page = "newsletters" %}

{% block newsletterbody -%}
    <h2>newsletters list</h2>

    <table class="records_list  table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Visible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('newsletter_newsletters_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.visible == "1" %}<button type="button" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></button>{% else %}<button type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></button>{% endif %} 
                <td>
                <ul>
                    <li>
                        <a href="{{ path('newsletter_newsletters_delete', { 'id': entity.id }) }}?_method=DELETE">delete</a>
                    <li>
                        <a href="{{ path('newsletter_newsletters_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('newsletter_newsletters_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>train list</h1>
    
    <p>{{ dump(entities) }}</p>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Headcode</th>
                <th>Motive Power</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('train_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.headcode }}</td>
                <td> entity.locoNo  </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('train_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('train_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('train_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
